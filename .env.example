# FinGuard IntelliAgent - Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# Anthropic API Configuration
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=FinGuard IntelliAgent
APP_ENV=development
APP_DEBUG=True
APP_VERSION=0.1.0

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Database Configuration (for Milestone 2+)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/finguard
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# ============================================================================
# Redis Configuration (for Milestone 2+)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# ============================================================================
# M-Pesa API Configuration (for future integration)
# ============================================================================
# MPESA_CONSUMER_KEY=
# MPESA_CONSUMER_SECRET=
# MPESA_SHORTCODE=
# MPESA_PASSKEY=
# MPESA_CALLBACK_URL=

# ============================================================================
# SMS Service Configuration (for future integration)
# ============================================================================
# SMS_API_KEY=
# SMS_SENDER_ID=FINGUARD

# ============================================================================
# Security Configuration
# ============================================================================
SECRET_KEY=your_secret_key_for_jwt_signing_change_this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Feature Flags (for gradual rollout)
# ============================================================================
ENABLE_SMS_PARSER=false
ENABLE_INSIGHTS=false
ENABLE_INVOICE_COLLECTION=false
